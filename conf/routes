# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# posts
GET           /posts                 controllers.PostsController.list()
GET           /posts/:post_id        controllers.PostsController.show(post_id: Long)
POST          /posts                 controllers.PostsController.add()
DELETE        /posts/:post_id        controllers.PostsController.delete(post_id: Long)
PUT           /posts/:post_id        controllers.PostsController.update(post_id: Long)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file          controllers.Assets.at(path="/public", file)